[
    {
        "key": "ctrl+d",
        "command": "workbench.action.closeActiveEditor"
    },
    {
        "key": "ctrl+s",
        "command": "extension.vim_ctrl+d"
    },
    // focus toggle on terminal pane
    {
        "key": "ctrl+shift+j",
        "command": "workbench.action.togglePanel"
    },
    // toggle sidebar
    {
        "command": "runCommands",
        "key": "ctrl+alt+y",
        "args": {
            "commands": [
                "workbench.action.toggleSidebarVisibility",
                "workbench.action.toggleActivityBarVisibility",
                "toggle.toggleCustomTitleBar",
            ]
        },
    },
    {
        "command": "workbench.files.action.focusFilesExplorer",
        "key": "ctrl+e",
        "when": "editorTextFocus",
    },
    {
        "command": "workbench.action.focusActiveEditorGroup",
        "key": "ctrl+e",
        "when": "!editorTextFocus"
    },
    {
        "command": "workbench.action.hideEditorTabs",
        "key": "ctrl+alt+x",
        "when": "editorTabsVisible"
    },
    {
        "command": "workbench.action.showMultipleEditorTabs",
        "key": "ctrl+alt+x",
        "when": "!editorTabsVisible"
    },
    {
        "key": "alt+j",
        "command": "editor.action.moveLinesDownAction",
        "when": "editorTextFocus && !editorReadonly && vim.active"
    },
    {
        "key": "alt+k",
        "command": "editor.action.moveLinesUpAction",
        "when": "editorTextFocus && !editorReadonly && vim.active"
    },
    {
        "key": "n",
        "command": "explorer.newFile",
        "when": "filesExplorerFocus && !inputFocus"
    },
    {
        "command": "renameFile",
        "key": "r",
        "when": "filesExplorerFocus && !inputFocus"
    },
    {
        "key": "shift+n",
        "command": "explorer.newFolder",
        "when": "explorerViewletFocus"
    },
    {
        "key": "shift+n",
        "command": "workbench.action.newWindow",
        "when": "!explorerViewletFocus"
    },
    {
        "command": "deleteFile",
        "key": "d",
        "when": "filesExplorerFocus && !inputFocus"
    }
]
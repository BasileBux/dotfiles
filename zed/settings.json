{
	"assistant": {
		"default_model": {
			"provider": "zed.dev",
			"model": "claude-3-5-sonnet-latest"
		},
		"version": "2"
	},
	"telemetry": {
		"diagnostics": false,
		"metrics": false
	},
	"theme": "Tokyo Night Storm",
	"vim_mode": true,
	// Nice fonts:
	"buffer_font_family": "GeistMono Nerd Font",
    // "buffer_font_family": "Monocraft Nerd Font",
    // "buffer_font_family": "GoMono Nerd Font",
    // "buffer_font_family": "GohuFont 11 Nerd Font",
	"ui_font_size": 14,
	"buffer_font_size": 20,
	"relative_line_numbers": true,
	"cursor_blink": false,
	"preferred_line_length": 100,
	"soft_wrap": "editor_width",
	"tab_bar": {
		"show": false
	},
	"project_panel": {
		"dock": "right"
	},
	"toolbar": {
		"breadcrumbs": false,
		"quick_actions": false
	},
	"format_on_save": "off",
	"terminal": {
		"font_family": "GeistMono Nerd Font",
		"line_height": "standard"
	},
	"gutter": {
		"code_actions": false,
		"runnables": false,
		"folds": false
	},
	"git": {
		"inline_blame": {
			"enabled": false
		}
	},
	"scrollbar": {
		"git_diff": false
	},
	"show_inline_completions": false,

	"languages": {
		"C": {
			"tab_size": 4,
			"hard_tabs": true
		},
		"Markdown": {
			"soft_wrap": "preferred_line_length"
		}
	},
	"tab_size": 4,
	"hard_tabs": true,
	"remove_trailing_whitespace_on_save": true
}
